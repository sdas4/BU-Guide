%h1 All Professors

%table#professors
  %thead
    %tr
      %th Name
      %th Office
      %th Class
  %tbody
    - @professors.each do |professor|
      %tr
        %td= link_to(professor.name, {:action => 'show', :id => professor.id}, :class => 'action show')
        %td= professor.office
        %td= professor.classes



= link_to '<button type="button">Add New Professor</button>'.html_safe, new_professor_path
= link_to '<button type="button">Back to Dashboard</button>'.html_safe, guide_dashboard_path